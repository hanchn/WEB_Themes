{
  "theme": {
    "name": "Shop Default",
    "version": "1.0.0",
    "description": "现代化电商主题",
    "author": "Theme Developer"
  },
  "colors": {
    "primary": "#2563eb",
    "secondary": "#64748b",
    "accent": "#f59e0b",
    "success": "#10b981",
    "warning": "#f59e0b",
    "error": "#ef4444",
    "background": "#ffffff",
    "surface": "#f8fafc",
    "text": {
      "primary": "#1e293b",
      "secondary": "#64748b",
      "muted": "#94a3b8"
    },
    "border": "#e2e8f0"
  },
  "typography": {
    "fontFamily": {
      "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
      "heading": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },
  "borderRadius": {
    "sm": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "full": "9999px"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "layout": {
    "maxWidth": "1280px",
    "headerHeight": "80px",
    "footerHeight": "200px",
    "sidebarWidth": "280px"
  },
  "features": {
    "darkMode": false,
    "animations": true,
    "lazyLoading": true,
    "infiniteScroll": false,
    "quickView": true,
    "wishlist": true,
    "compare": false,
    "reviews": true,
    "socialShare": true
  },
  "ecommerce": {
    "currency": "¥",
    "currencyPosition": "before",
    "showTax": true,
    "showShipping": true,
    "cartType": "drawer",
    "checkoutType": "single-page",
    "paymentMethods": ["alipay", "wechat", "card"],
    "shippingMethods": ["standard", "express", "pickup"]
  }
}